{{#each erros}}
<div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}


<div class="card">
    <div class="card-body">
        <h4>Editar Monumento:</h4>
        <form action="/admin/monumentos/edit" method="POST">
            <input type="hidden" name="id" value="{{monumento._id}}">
            <label for="nome">Nome da obra:</label>
            <input type="text" name="nomeobra" class="form-control" value="{{monumento.nomeobra}}" required>
            <label for="idade">Idade da obra:</label>
            <input type="number" name="idade" class="form-control" value="{{monumento.idade}}" required>
            <label for="local">Local da obra:</label>
            <input type="text" name="local" class="form-control" value="{{monumento.local}}" required>
            <label for="descricao">Descrição da obra:</label>
            <textarea name="descricao" class="form-control">{{monumento.descricao}}</textarea>
            <label for="categoria">Categoria:</label>
            <select name="categoria" class="form-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria criada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-3" type="submit">Salvar monumento</button>
        </form>
    </div>
</div>
